                <mrow>y\amp=\frac{5}{3}x+b</mrow>
                <mrow>\substitute{\frac{3}{4}}\amp=\frac{5}{3}(\substitute{-3})+b</mrow>
                <mrow>\frac{3}{4}\amp=-5+b</mrow>
                <mrow>\frac{3}{4}\addright{5}\amp=-5+b\addright{5}</mrow>
                <mrow>\frac{3}{4}+\frac{20}{4}\amp=b</mrow>
                <mrow>\frac{23}{4}\amp=b</mrow>
