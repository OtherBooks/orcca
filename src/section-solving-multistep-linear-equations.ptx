      <li permid="Kyo">
        <xref ref="mth60-applications-of-linear-equations-and-inequalities" />
      </li>

      <li permid="qFx">
        <xref ref="mth60-solve-two-parts-linear-equation-applications" />
      </li>

      <li permid="WMG">
        <xref ref="mth60-apply-perimeter-and-area-formulas" />
      </li>

